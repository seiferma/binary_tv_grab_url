{
	"name": "Go",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VERSION": "1.25"
		}
	},
	"workspaceMount": "",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		"--volume=${localWorkspaceFolder}:/workspaces/${localWorkspaceFolderBasename}:Z"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"golang.Go"
			],
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.gopath": "/go"
			}
		}
	}
}